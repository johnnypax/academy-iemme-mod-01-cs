@using System.Globalization
@model ASP_WEB_lez02_Negozio.Models.Prodotto

@{
    string? prezzoConvertito = "";
    if (Model.Prezzo != null)
    {
        prezzoConvertito = Model.Prezzo.ToString();

        if(prezzoConvertito != null)
            prezzoConvertito = prezzoConvertito.Replace(",", ".");
    }

    // if (Model.DataScadenza != null)
    //     String dataConvertita = String.Join("-", Model.DataScadenza.ToString().Split('/').Reverse());

}

<h1>Modifica Prodotto</h1>

<form method="post" asp-controller="Prodotto" asp-action="EffettuaModifica">
    <div class="form-group">
        <label for="Codice">Codice</label>
        <input type="text" class="form-control" asp-for=Codice value="@Model.Codice" readonly/>
    </div>
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" class="form-control" asp-for=Nome value="@Model.Nome" />
    </div>
    <div class="form-group">
        <label for="Descrizione">Descrizione</label>
        <textarea type="text" class="form-control" asp-for=Descrizione>@Model.Descrizione</textarea>
    </div>
    <div class="form-group">
        <label for="Categoria">Categoria</label>
        <input type="text" class="form-control" asp-for=Categoria value="@Model.Categoria" />
    </div>
    <div class="form-group">
        <label for="Prezzo">Prezzo</label>
        <input type="number" min="0" class="form-control" asp-for=Prezzo value="@prezzoConvertito" />
    </div>
    <div class="form-group">
        <label for="DataScadenza">Scadenza</label>
        <input type="date" min="0" class="form-control" asp-for=DataScadenza value="@dataConvertita" />
    </div>

    <button class="btn btn-primary btn-block" type="submit">Modifica</button>
</form>